{% extends './_layout.twig' %}

{% set title = 'Inscription' %}

{% block content %}
    <main>
        {# SECTION SIGNUP #}
        <section class="section pd-t1">
            <div class="container">
                <div class="columns pd-t2 title__underlined">
                    <div class="column pd0">
                        <div class="level">
                            <h1 class="text ft-1 is-tertiary title is-size-5-desktop is-size-4-tablet is-size-5-mobile has-text-left">
                                Connexion
                            </h1>
                        </div>
                    </div>
                </div>
                <div class="columns pd-t2">
                    <div class="column pd0">
                        <div class="level">
                            <p class="text ft-2 is-secondary">
                                Pour pouvoir donner une définition et sauvegarder des mots, vous devez d’abord vous
                                inscrire.
                            </p>
                        </div>
                    </div>
                </div>
                {% if checkPassword == false %}
                    <h2>Vous n'êtes pas inscrit, ou l'email renseignée n'est pas bonne</h2>
                {% endif %}
                {% if results.length < 0 %}
                    <h2>Vous devez vous inscrire</h2>
                {% endif %}
                <form action="/signin" method="POST">
                    <div class="columns">
                        <div class="column">
                            <div class="level is-mobile">
                                <div class="level-item p-rel">
                                    <span class="input-custom input-custom__form input--hoshi over-hide">
                                        <input id="input-search-email"
                                               class="input__field input__field--hoshi text is-secondary is-size-6"
                                               type="email" name="email"/>
                                        <label for="input-search-email"
                                               class="input__label input__label--hoshi input__label--hoshi-color-1">
                                            <span class="input__label-content input__label-content--hoshi text ft-1 is-secondary">Email</span>
                                        </label>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="columns">
                        <div class="column">
                            <div class="level is-mobile">
                                <div class="level-item p-rel">
                                    <span class="input-custom input-custom__form input--hoshi over-hide">
                                        <input id="input-search-password"
                                               class="input__field input__field--hoshi text is-secondary is-size-6"
                                               type="password" name="password"/>
                                        <label for="input-search-password"
                                               class="input__label input__label--hoshi input__label--hoshi-color-1">
                                            <span class="input__label-content input__label-content--hoshi text ft-1 is-secondary">Mot de passe</span>
                                        </label>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="columns pd-t2">
                        <div class="column">
                            <div class="level  is-mobile">
                                <button class="button button__redirect mauto-w text ft-2" type="submit">
                                    Connexion
                                </button>
                            </div>
                            <div class="level">
                                <div class="level-item">
                                    <p class="text ft-1 is-size-7 has-text-centered">
                                        Si vous n'êtes toujours pas inscrit,
                                        vous pouvez vous <a href="/signup" class="text is-primary">inscrire</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </main>
{% endblock %}